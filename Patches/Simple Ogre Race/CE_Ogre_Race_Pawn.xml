<?xml version="1.0" encoding="utf-8" ?>
<Patch>	
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Simple Ogre Race</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>

				<!-- Tribal -->
				<li Class="PatchOperationReplace">
					<xpath>Defs/PawnKindDef[defName="FP_OGRE_Tribal_Berserker"]/combatPower</xpath>
					<value>
						<combatPower>60</combatPower>
					</value>
				</li>

				<!-- Pirate -->
				<li Class="PatchOperationReplace">
					<xpath>Defs/PawnKindDef[defName="FP_OGRE_Pirate_Berserker"]/combatPower</xpath>
					<value>
						<combatPower>120</combatPower>
					</value>
				</li>

			</operations>
		</match>
	</Operation>
</Patch>