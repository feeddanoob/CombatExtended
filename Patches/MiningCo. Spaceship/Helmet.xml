<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>MiningCo. Spaceship</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>

 <li Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="Apparel_SimpleHelmetMedic"]/statBases/ArmorRating_Sharp</xpath>
    <value>
      	<ArmorRating_Sharp>4</ArmorRating_Sharp>
    </value>
 </li>

 <li Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="Apparel_SimpleHelmetMedic"]/statBases/ArmorRating_Blunt</xpath>
    <value>
      <ArmorRating_Blunt>6</ArmorRating_Blunt>
    </value>
 </li>

 <li Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="Apparel_SimpleHelmetMedic"]/statBases/ArmorRating_Heat</xpath>
    <value>
      	<ArmorRating_Heat>0</ArmorRating_Heat>
    </value>
 </li>

 <li Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="Apparel_SimpleHelmetMedic"]/costList</xpath>
    <value>
    <costList>
      <Steel>50</Steel>
    </costList>
    </value>
 </li>

			</operations>
		</match>
	</Operation>

</Patch>